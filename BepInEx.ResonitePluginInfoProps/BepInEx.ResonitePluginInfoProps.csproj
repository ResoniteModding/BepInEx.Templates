<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>BepInEx.ResonitePluginInfoProps</PackageId>
        <Version>3.0.0</Version>
        <Authors>ResoniteModding</Authors>
        <PackageProjectUrl>https://github.com/ResoniteModding/BepInEx.Templates/tree/master/BepInEx.ResonitePluginInfoProps</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Description>Helper build target that generates PluginInfo class based on assembly metadata.</Description>
        <PackageTags>BepInEx;Build;Props;Resonite;Modding</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <TargetFrameworks>net20;netstandard2.0</TargetFrameworks>
        <PackageOutputPath>$(SolutionDir)nuget</PackageOutputPath>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IncludeContentInPack>true</IncludeContentInPack>
        <ContentTargetFolders>build</ContentTargetFolders>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="BepInEx.ResonitePluginInfoProps.props" />
        <Compile Remove="**\*" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
